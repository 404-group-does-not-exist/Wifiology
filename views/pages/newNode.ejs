<% include ../partials/header-new.ejs %>
<% include ../partials/navbar.ejs %>
<div class="container">
    <div class="row">
        <% include ../partials/alerts.ejs %>
    </div>
    <div class="row">
        <div class="col">
            <h1>Create A New Node</h1>
            <form action="/nodes/new" method="POST">
                <div class="form-group">
                    <label for="createNodeNodeName">Node Name</label>
                    <input type="text" name="nodeName" class="form-control" id="createNodeNodeName">
                </div>
                <div class="form-group">
                    <label for="createNodeNodeLocation">Node Location</label>
                    <input type="text" name="nodeLocation" class="form-control" id="createNodeNodeLocation">
                </div>
                <div class="form-group">
                    <label for="createNodeNodeDescription">Node Description</label>
                    <input type="text" name="nodeDescription" id="createNodeNodeDescription" class="form-control">
                </div>
                <div class="form-check form-group">
                    <input class="form-check-input" type="checkbox" name="isPublic" id="createNodeIsPublic" checked>
                    <label class="form-check-label" for="createNodeIsPublic">Is the Node Public?</label>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Create</button>
            </form>
        </div>
    </div>
    <hr>
    <div class="row">
        <div class="col">
            <p><a href="https://github.com/404-group-does-not-exist/client_proof_of_concept">
                    The package and code to deploy to your Wifiology Node can be found here.
            </a></p>
        </div>
    </div>
</div>
